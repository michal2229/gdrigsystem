    "version": "0.2.0",
    "configurations": [

      {
        "name": "app_test - Build and debug",
        "request": "launch",
        "type": "cppdbg",        
        "linux": {
          "MIMode": "gdb",
          //"envFile": "${workspaceFolder}/builddir/meson-vscode.env",
        },
        "setupCommands": [
          { 
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "cwd": "${workspaceFolder}/builddir/",
        "program": "${workspaceFolder}/builddir/app_test",
        "args": [ ],
        
        "environment": [
          {
            "name": "VARNAME",
            "value": "42"
          },
        ],
        "stopAtEntry": false,
        "preLaunchTask": "Meson: Build all targets",
        "symbolOptions": {
          "searchPaths": [
            "${workspaceFolder}/builddir",
          ],
          "searchMicrosoftSymbolServer": true,
          "cachePath": "${workspaceFolder}\\builddir\\vscode-symbols-cache",
          "moduleFilter": {
            "mode": "loadAllButExcluded",
            "excludedModules": []
          }
        }
      }
    ]
  }
  
